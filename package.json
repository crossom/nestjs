{
	"name": "@thothom/nestjs",
	"version": "0.0.1",
	"main": "index.js",
	"types": "index.d.ts",
	"license": "Apache-2.0",
	"author": "Techmmunity",
	"type": "module",
	"description": "A NestJs wrapper for @thothom/core",
	"homepage": "https://thothom.com/",
	"bugs": {
		"url": "https://github.com/thothom/nestjs/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thothom/nestjs.git"
	},
	"keywords": [
		"orm",
		"odm",
		"nosql",
		"typeorm",
		"typescript",
		"database",
		"data-mapper",
		"object-mapper",
		"nestjs",
		"thothom"
	],
	"peerDependencies": {
		"@nestjs/common": "^8.2.0",
		"@nestjs/core": "^8.2.0",
		"@thothom/core": "^0.0.1",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@nestjs/common": "^8.4.5",
		"@nestjs/core": "^8.4.5",
		"@techmmunity/eslint-config": "^5.2.3",
		"@thothom/core": "^0.0.1",
		"@types/jest": "^27.5.1",
		"@vercel/ncc": "^0.34.0",
		"eslint": "^8.16.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "^13.1.2",
		"prettier": "^2.6.2",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^28.0.3",
		"ts-node": "^10.8.0",
		"typescript": "^4.7.2"
	},
	"scripts": {
		"prepare": "husky install",
		"ts-node": "ts-node",
		"test": "jest",
		"test:cov": "jest --coverage",
		"build": "ncc build src/index.ts -o dist -s -m -e @thothom/core -e @nestjs/common -e @nestjs/core -e reflect-metadata",
		"format": "eslint . --fix --quiet",
		"lint": "eslint . --quiet",
		"upgrade:dependencies": "yarn upgrade-interactive --latest",
		"husky:pre-commit": "tsc",
		"lk": "yarn build && cp package.json dist/package.json && cd dist && yarn link && cd ..",
		"ulk": "yarn unlink && yarn lk"
	}
}
